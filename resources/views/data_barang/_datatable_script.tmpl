                                style: "text-align: left; max-height: 400px; overflow-y: auto;", // Agar form bisa discroll
                            },
                        },
                        buttons: {
                            cancel: {
                                text: 'Batal',
                                visible: true,
                                className: 'btn btn-danger',
                            },
                            confirm: {
                                text: 'Simpan Perubahan',
                                className: 'btn btn-success',
                            }
                        },
                        closeOnConfirm: false,
                    }).then((isConfirmed) => {
                        if (isConfirmed) {
                            // Ambil data sebelum swal close
                            const updatedData = {
